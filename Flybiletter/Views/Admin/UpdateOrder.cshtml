@model Model.Order

@{
    Layout = null;
    ViewBag.Title = "Oppdater bestilling";
}

<!DOCTYPE html>
<html>
<head>
    <title>Administrator</title>
    <meta charset="utf-8" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    @Html.Partial("_Airzures")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script type="text/javascript">

        $(function () {
            $('#admin-nav li').click(function () {
                $('#admin-nav li').removeClass('selected');
                $(this).addClass('selected');
            });
        });

    </script>
</head>
<body id="admin-body">

    <!--HORIZONTAL TOP NAVIGATION BAR-->
    <div class="admin-navlogo navbar-fixed-top">
        <a href="@Url.Action("Index", "Home")" title="Airzure Airlines">
            <img src="@Url.Content("~/Content/images/airline_logo.png")" id="admin-logo" />
        </a>
    </div>
    <div class="admin-navbar navbar-fixed-top">
        <p class="admin-navheader">ADMINISTRATOR</p>
        <div class="pull-right">
            <button class="btn log-out" type="submit">Logg ut</button>
        </div>
    </div>

    <div class="row">
        <!--VERTICAL SIDE NAVIGATION BAR-->
        <div class="col-sm-3">
            <div class="sidebar-nav">
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="visible-xs navbar-brand">Meny</span>
                    </div>
                    <div class="navbar-collapse collapse sidebar-navbar-collapse">
                        <ul class="nav navbar-nav" id="admin-nav">
                            <li><a href="@Url.Action("Home", "Admin")">Hjem</a></li>
                            <li><a class="active" href="@Url.Action("Departure", "Admin")">Avgang</a></li>
                            <li><a href="@Url.Action("Order", "Admin")">Bestilling</a></li>
                            <li><a href="@Url.Action("Airport", "Admin")">Flyplass</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!--CONTENT AREA-->
        <div class="col-sm-9 admin-content">


            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-12">
                    @Html.LabelFor(model => model.OrderNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(model => Model.OrderNumber, new { @readonly = "readonly", id = "order", @class = "input-dialog-design" })
                    @Html.ValidationMessageFor(model => model.OrderNumber, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-12">
                    @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(model => model.Firstname, new { id = "firstname", @class = "input-dialog-design" })
                    @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                </div>

                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.Surname, new { id = "surname", @class = "input-dialog-design" })
                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Tlf, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.Tlf, new { id = "tlf", @class = "input-dialog-design" })
                        @Html.ValidationMessageFor(model => model.Tlf, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.Email, new { id = "email", @class = "input-dialog-design" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.Price, new { id = "price", @class = "input-dialog-design" })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Cancelled, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.CheckBoxFor(model => model.Cancelled)
                        @Html.ValidationMessageFor(model => model.Cancelled, "", new { @class = "text-danger" })
                    </div>

                        <br /><br />
                        <a href="@Url.Action("Airport", "Admin")" class="btn btn-default btn-lg pull-left">Tilbake</a>
                        <input type="submit" value="Bekreft" class="btn btn-default btn-lg pull-right" id="button-design">
            }
            <p>Info</p>
        </div>







    </div>

</body>
</html>