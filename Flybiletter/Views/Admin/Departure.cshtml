@model List<Model.Departure>

@{
    Layout = null;
    ViewBag.Title = "Departure";
}

<!DOCTYPE html>
<html>
<head>
    <title>Administrator</title>
    <meta charset="utf-8" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    @Html.Partial("_Airzures")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script type="text/javascript">

        $(function () {
            $('#admin-nav li').click(function () {
                $('#admin-nav li').removeClass('selected');
                $(this).addClass('selected');
            });
        });

        function showHide() {
            var x = document.getElementById("show-hide-element");
            if (!x.style.display  || x.style.display == "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }

    </script>
</head>
<body id="admin-body">

    <!--HORIZONTAL TOP NAVIGATION BAR-->
    <div class="admin-navlogo navbar-fixed-top">
        <a href="@Url.Action("Index", "Home")" title="Airzure Airlines">
            <img src="@Url.Content("~/Content/images/airline_logo.png")" id="admin-logo" />
        </a>
    </div>
    <div class="admin-navbar navbar-fixed-top">
        <p class="admin-navheader">ADMINISTRATOR</p>
        <div class="pull-right">
            @Html.ActionLink("Logg ut", "Logout", "Admin", null, new { @class = "btn log-out" })
        </div>
    </div>

    <div class="row">
        <!--VERTICAL SIDE NAVIGATION BAR-->
        <div class="col-sm-3">
            <div class="sidebar-nav">
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="visible-xs navbar-brand">Meny</span>
                    </div>
                    <div class="navbar-collapse collapse sidebar-navbar-collapse">
                        <ul class="nav navbar-nav" id="admin-nav">
                            <li><a href="@Url.Action("Home", "Admin")">Hjem</a></li>
                            <li><a class="active" href="@Url.Action("Departure", "Admin")">Avgang</a></li>
                            <li><a href="@Url.Action("Order", "Admin")">Bestilling</a></li>
                            <li><a href="@Url.Action("Airport", "Admin")">Flyplass</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!--CONTENT AREA-->
        <div class="col-sm-9 admin-content">
            <h1>Avgang</h1>

            <!--Create new departure-->
            <button onclick="showHide()" id="btn-showHide"class="create-button pull-right btn-create">+ Lag ny avgang</button>
            <br />
            <div id="show-hide-element">
                @using (Html.BeginForm(FormMethod.Post))
                {

                    <div class="col-sm-12">
                        #@Html.Label("Flight ID")
                        @Html.TextBoxFor(x => x.FlightId, new { @class = "flight-id-input" })
                    </div>

                    <div class="col-sm-6 ">
                        @Html.Label("Til")
                        @Html.TextBoxFor(x => x.To, new { @class = "create-input-dialog move-to" })
                    </div>

                    <div class="col-sm-6">
                        @Html.Label("Fra")
                        @Html.TextBoxFor(x => x.From, new { @class = "create-input-dialog" })
                    </div>

                    <div class="col-sm-6">
                        @Html.Label("Dato")
                        @Html.EditorFor(x => x.Date, new { htmlAttributes = new { @class = "create-input-dialog move-date", @type = "date" } })
                    </div>

                    <div class="col-sm-6">
                        @Html.Label("Tid")
                        @Html.EditorFor(x => x.DepartureTime, new { htmlAttributes = new { @class = "create-input-dialog" } })
                    </div>
        
                    <input type="submit" value="Lagre" class="btn btn-default position-button btn-save" />
                
                    }
            </div>
            <br>
            <p>Tabell info</p>
        </div>
    </div>




</body>
</html>