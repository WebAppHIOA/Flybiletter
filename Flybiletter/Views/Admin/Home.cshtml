@{
    Layout = "~/Views/Shared/AdminSharedView.cshtml";
}


<head>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/admin_custom/home_custom_JS.js"></script>
</head>

        <!--CONTENT AREA-->
<div class="row">
    <div class="col-sm-9 admin-content">
        <h1>Hjem</h1>
        <p>Statistikk over antall aktive avganger, bestillinger og flyplasser i databasen.</p>

        <div class="flight-updates">
            <div class="col-sm-12 col-md-4 home-dep">
                <h3>Avganger</h3>
                @{ Dictionary<string, int>
                      counts = ViewData["CountData"] as Dictionary<string, int>;
                }

                <p id="home-count">@counts["Departure"]</p>
                <p id="mini-article">antall aktive</p>
            </div>

            <div class="col-sm-12 col-md-4 home-order">
                <h3>Bestillinger</h3>
                <p id="home-count">@counts["Order"]</p>
                <p id="mini-article">antall aktive</p>
            </div>
            <div class="col-sm-12 col-md-4 home-airport">
                <h3>Flyplasser</h3>
                <p id="home-count">@counts["Airport"]</p>
                <p id="mini-article">antall aktive</p>
            </div>
        </div>

    </div>
</div>

