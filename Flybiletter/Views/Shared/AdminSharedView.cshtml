@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
        <title>Administrator</title>
        <meta charset="utf-8" content="width=device-width" />
        <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
        @Html.Partial("_Airzures")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <script src="~/Scripts/jquery-3.2.1.min.js"></script>
        <script type="text/javascript">
        </script>
</head>
<body>
    <!--HORIZONTAL TOP NAVIGATION BAR-->
    <div class="admin-navlogo navbar-fixed-top">
        <a href="@Url.Action("Index", "Home")" title="Airzure Airlines">
            <img src="@Url.Content("~/Content/images/airline_logo.png")" id="admin-logo" />
        </a>
    </div>
    <div class="admin-navbar navbar-fixed-top">
        <p class="admin-navheader">ADMINISTRATOR</p>
        <div class="pull-right">
            @Html.ActionLink("Logg ut", "Logout", "Admin", null, new { @class = "btn log-out" })
        </div>
    </div>

    <div class="row">
        <!--VERTICAL SIDE NAVIGATION BAR-->
        <div class="col-sm-3">
            <div class="sidebar-nav">
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="visible-xs navbar-brand">Administrator</span>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav" id="admin-nav">
                            <li><a class="active" href="@Url.Action("Home", "Admin")">Hjem</a></li>
                            <li><a href="@Url.Action("Departure", "Admin")">Avgang</a></li>
                            <li><a href="@Url.Action("Order", "Admin")">Bestilling</a></li>
                            <li><a href="@Url.Action("Airport", "Admin")">Flyplass</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
    <div class="container">
            @RenderBody()
            <hr />
            
    </div>
    <div>
        <footer>
        <p>&copy; @DateTime.Now.Year - Airzure!</p>
        </footer>
    </div>
    
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>